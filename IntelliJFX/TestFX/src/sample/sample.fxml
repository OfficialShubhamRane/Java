<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

   <Label alignment="TOP_CENTER" prefHeight="18.0" prefWidth="80.0" text="BMI Calculator" textAlignment="CENTER" />
   <TextField fx:id="doubleHeight" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <TextField fx:id="doubleWeight" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <Label prefHeight="18.0" prefWidth="80.0" text="Height" GridPane.rowIndex="1" />
   <Label prefHeight="18.0" prefWidth="80.0" text="Weight" GridPane.rowIndex="2" />
   <Button fx:id="btnCompute" mnemonicParsing="false" onAction="#sayHello" prefHeight="26.0" prefWidth="80.0" text="Compute" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   <Label fx:id="result" prefHeight="18.0" prefWidth="80.0" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
